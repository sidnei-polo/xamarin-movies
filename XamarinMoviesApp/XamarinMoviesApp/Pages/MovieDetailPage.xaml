<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:views="clr-namespace:XamarinMoviesApp.Views"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="XamarinMoviesApp.Pages.MovieDetailPage"
    Title="{Binding Title}">
    <ScrollView>
        <StackLayout>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="196"/>
                    <RowDefinition Height="32"/>
                    <RowDefinition Height="116"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Image Grid.ColumnSpan="2"
                    Grid.RowSpan="2"
                    Aspect="AspectFill"
                    BackgroundColor="#CFCFCF"
                    Source="{Binding BackdropImage}"/>
                <Image Grid.Row="1"
                    Grid.RowSpan="2"
                    Margin="16,8"
                    WidthRequest="92"
                    Aspect="AspectFill"
                    BackgroundColor="#E6E7E7"
                    Source="{Binding PosterImage}"/>
                <StackLayout Grid.Column="1"
                    Grid.Row="2">
                    <Label LineBreakMode="TailTruncation"
                        Style="{StaticResource ItemTitleStyle}"
                        Text="{Binding Title}"/>
                    <Label LineBreakMode="TailTruncation"
                        Text="{Binding VoteAverage, StringFormat='Vote average: {0:0.00}'}"/>
                    <Label Text="{Binding ReleaseDate, StringFormat='{0:y}'}"/>
                </StackLayout>
            </Grid>
            <views:SessionView Text="Overview"/>
            <Label Margin="16,0" Text="{Binding Overview}"/>
            <views:SessionView Text="Genres"/>
            <Label Margin="16,0,16,16" Text="{Binding Genres}"/>
        </StackLayout>
    </ScrollView>
</ContentPage>
